<launch>
    <arg name="color_file" default="$(find blob3d)/colors/dots.txt"/>
    <node name="cmvision" type="cmvision" pkg="cmvision">
	<remap from="image" to="/camera/rgb/image_rect_color"/>
	<param name="color_file" value="$(arg color_file)"/>
	<param name="mean_shift_on" value="false"/>
	<param name="debug_on" value="true"/>
	<param name="spatial_radius_pix" value="0"/>
	<param name="color_radius_pix" value="0"/>
    </node>
</launch>